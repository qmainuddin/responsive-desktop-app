<UserControl x:Class="HSDL_IDM_P2.Pages.Common.ModalContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HSDL_IDM_P2.Pages.Common"
             xmlns:test="clr-namespace:HSDL_IDM_P2.Pages.UserAdmin.Modals"
             xmlns:tools="clr-namespace:HSDL_IDM_P2.Utils"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="300" d:DesignWidth="1300">
    <Grid DataContext="{Binding ElementName=root}">
        <Border Background="#90000000" Visibility="{Binding Visibility}">
            <Border Name="RoundBorder" BorderBrush="Black" BorderThickness="1" Background="AliceBlue" 
					CornerRadius="10,10,10,10" VerticalAlignment="Center"
					HorizontalAlignment="Center">
                <Border.BitmapEffect>
                    <DropShadowBitmapEffect Color="Black" Opacity="0.5" Direction="270" ShadowDepth="0.7" />
                </Border.BitmapEffect>
                <ContentPresenter Name="innerContents">
                </ContentPresenter>
            </Border>
        </Border>
    </Grid>
</UserControl>
